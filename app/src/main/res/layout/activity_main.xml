<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="suasorte.projeto.com.suasorte.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="495dp"
        android:background="#DE7005"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/botaoSuaSorteId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:text="Sorte do dia" />

        <TextView
            android:id="@+id/textoSuaSorteId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/botaoSuaSorteId"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="71dp"
            android:text=""
            android:textColor="@drawable/color_fonte"
            android:textSize="@dimen/texto_tamanho" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
